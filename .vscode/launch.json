{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Dev",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "preLaunch"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Direct",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/src/app.js",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "preLaunch"
        }
    ]
}